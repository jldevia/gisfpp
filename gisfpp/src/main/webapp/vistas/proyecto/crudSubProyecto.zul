<div id="pnlCrudSP" class="panel panel-primary" hflex="true" vflex="true" 
	xmlns:n="native" apply="org.zkoss.bind.BindComposer" 
		viewModel="@id('vm') @init('unpsjb.fipm.gisfpp.controladores.proyecto.MVCrudSubProyecto')">
	<div class="panel-heading">
		<n:h3 class="panel-title">
			<label value="@load(vm.titulo)" style="font-size: 14px;" />
		</n:h3>
	</div>
	<div class="panel-body" vflex="true">
		<tabbox id="tbbxSP" vflex="true" hflex="true">
			<tabs>
				<tab label="Datos Generales"/>
				<tab label="ISFPP" visible="@load(vm.modo ne 'NUEVO')"/>
			</tabs>
			<toolbar>
				<toolbarbutton image="recursos/img/icon-plus-sign.png"
					label="Nuevo" disabled="@load((vm.creando) or (vm.toolbar_disabled))" visible="@load(vm.modo eq 'NUEVO')" 
						onClick="@command('nuevoSP')" class="btn btn-success btn-xs"/>
				<toolbarbutton image="recursos/img/icon-edit.png" label="Editar" 
					disabled="@load((vm.editando) or (vm.toolbar_disabled))" visible="@load((vm.modo ne 'NUEVO'))"
					 onClick="@command('editar')" class="btn btn-success btn-xs"/>
				<space bar="true" spacing="10px" />
				<toolbarbutton image="recursos/img/icon-save.png"
					label="Guardar" class="btn btn-success btn-xs"
					disabled="@load(((not vm.creando) and (not vm.editando)) or (vm.toolbar_disabled))"
					onClick="@command('guardar')" />
				<toolbarbutton image="recursos/img/icon-remove-sign.png"
					label="Cancelar" disabled="@load(((not vm.creando) and (not vm.editando)) or (vm.toolbar_disabled))"
					onClick="@command('cancelar')" class="btn btn-success btn-xs"/>
				<space bar="true" spacing="10px" />
				<toolbarbutton image="recursos/img/icon-arrow-left.png"
					label="Volver" onClick="@command('volver')" tooltiptext="Volver al Proyecto"
						class="btn btn-success btn-xs" disabled="@load(vm.creando or vm.editando or vm.toolbar_disabled)"/>
				<toolbarbutton label="Salir" class="btn btn-success btn-xs"
					image="recursos/img/icon-exit.png" disabled="@load(vm.creando or vm.editando or vm.toolbar_disabled)"
						onClick="@command('salir')"/>		
			</toolbar>
			<tabpanels>
				<tabpanel id="tabDatosGenerales" hflex="1" vflex="1">
					<grid hflex="1" vflex="1" sclass="fgrid">
						<columns>
							<column width="33%"/>
							<column width="33%"/>
							<column width="34%"/>	
						</columns>
						<rows>
							<row height="15px"/>
							<row>
								<div>
									<label value="Titulo" class="form-label" width="45%"/>
									<textbox value="@bind(vm.item.titulo)" width="95%" class="form-control"
										maxlength="80" readonly="@load((not vm.creando) and (not vm.editando))" />
								</div>	
							</row>
							<row height="15px"/>
							<row>
								<div>
									<label value="Observaciones" class="form-label" width="45%"/>
									<textbox value="@bind(vm.item.observaciones)" width="95%" class="form-control"
										maxlength="500" cols="50" rows="4" 
											readonly="@load((not vm.creando) and (not vm.editando))" />
								</div>
							</row>
						</rows>
					</grid>
				</tabpanel>
				<tabpanel>
					<include src="vistas/proyecto/listadoIsfpp.zul"/>
				</tabpanel>
			</tabpanels>
		</tabbox>
	</div>
</div>
