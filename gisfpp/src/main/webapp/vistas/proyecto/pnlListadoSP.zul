<vbox spacing="12px" width="100%" height="100%">
	<toolbar hflex="1" sclass="mitool-bar">
		<toolbarbutton image="recursos/img/icon-addtolist.png"
			style="float:right;" label="Nuevo SP"
			onClick="@command('nuevoSP')" />
	</toolbar>
	<grid width="100%" vflex="1" mold="paging" autopaging="true"
		emptyMessage="Este Proyecto no tiene Sub-Proyectos asignados." 
			model="@load(vm.subProyectos)">
		<columns>
			<column label="NÂ°" width="8%" />
			<column label="Titulo" width="22%" />
			<column label="Descripcion" width="55%" />
			<column label="Ver" width="5%" align="center"/>
			<column label="Editar" width="5%" align="center"/>
			<column label="Baja" width="5%" align="center"/>
		</columns>
		<template name="model">
			<row>
				<label  value="@load(each.id)" />
				<label value="@load(each.titulo)" />
				<label value="@load(each.observaciones)"/>
				<toolbarbutton image="recursos/img/icon-preview.png"
					tooltip="Ver detalle" onClick="@command('verSP', idItem=each.id)" />
				<toolbarbutton image="recursos/img/icon-edit.png"
					tooltiptext="Editar datos" onClick="@command('editarSP', idItem=each.id)" />
				<toolbarbutton image="recursos/img/icon-trash.png"
					tooltiptext="Dar de baja"
					onClick="" />
			</row>
		</template>
	</grid>
</vbox>